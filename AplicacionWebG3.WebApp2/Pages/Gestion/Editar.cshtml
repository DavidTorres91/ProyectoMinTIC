@page
@model AplicacionWebG3.WebApp2.Pages.Gestion.Editar
@{
    var persona = Model.persona;
}


<div class="container">
    <div id = "registro-row" class="row justify-content-center align-items-center">
        <div id = "registro-col" class="col-auto p-5 text-center">
            <form method="post">
                <input type="hidden" value="@persona.Id" id="Id" name="Id">
                <div id = "Registro-form" class="form-group">
                <h3 class="text-center text-info">Actualizar</h3>
                <label for="nombre">Nombres</label>
                <input type="text" class="form-control" name="nombre" id="nombre" placeholder="digite Nombre" minlength="3" maxlength="50" value = "@persona.Nombre">
                </div>
                <div class="form-group">
                <label for="apellido">Apellidos</label>
                <input type="text" class="form-control" name="apellido" id="apellido" placeholder="digite Apellidos" minlength="3" maxlength="50" value= "@persona.Apellido">
                </div>
                <div class="form-group">
                <label for="telefono">Direccion</label>
                <input type="text" class="form-control" name="direccion" id="direccion" placeholder="digite direccion" minlength="3" maxlength="100" value = "@persona.Direccion">
                </div>
                <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="Date" textmode="Date" class="form-control" name="fecha" id="fecha" placeholder="digite fecha"  >
                </div>
                <div class="form-group">
                    <label for="genero">Genero</label>
                    <select class="form-control" id="genero" name="genero">
                        <option value ="" selected = "selected" >@persona.Genero</option>
                        <option value ="0">Masculino</option>
                        <option value = "1">Femenino</option>                
                </select>
                </div>
             
                <p></p>
                <button type="submit" class = "btn btn-outline-primary">Actualizar</button>
                
                






            </form>
        </div>

    
    </div>

</div>
